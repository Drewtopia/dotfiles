# Version Managers Installation  
# Installs mise for managing multiple language versions
# Template hash: {{ include "dot_config/dotfile_source/version-managers.sh.tmpl" | sha256sum }}

#!/usr/bin/env bash
set -euo pipefail

{{ if .dev_computer -}}
echo "ğŸ”§ Installing version managers..."

# Install mise (formerly rtx) - modern asdf replacement
if ! command -v mise >/dev/null 2>&1; then
    echo "ğŸ“¦ Installing mise..."
    
    {{- if eq .chezmoi.os "darwin" }}
    if command -v brew >/dev/null 2>&1; then
        brew install mise || echo "âš ï¸  mise installation failed"
    else
        curl https://mise.run | sh || echo "âš ï¸  mise installation failed"
    fi
    {{- else if eq .chezmoi.os "linux" }}
    curl https://mise.run | sh || echo "âš ï¸  mise installation failed"
    {{- end }}
    
    # Add mise to PATH for this script
    export PATH="$HOME/.local/share/mise/bin:$PATH"
else
    echo "âœ… mise already installed"
fi

# Configure mise with essential tools
if command -v mise >/dev/null 2>&1; then
    echo "ğŸ”§ Configuring mise with default tools..."
    
    # Install latest LTS Node.js via mise (as backup to pnpm)
    mise install node@lts 2>/dev/null || echo "âš ï¸  Node.js installation via mise failed"
    
    # Install Python latest
    mise install python@latest 2>/dev/null || echo "âš ï¸  Python installation via mise failed"
    
    # Set global versions
    mise global node@lts python@latest 2>/dev/null || echo "âš ï¸  Setting global versions failed"
    
    echo "âœ… mise configuration completed"
fi

echo "âœ… Version managers installation completed!"
{{- else }}
echo "ğŸ  Skipping version managers installation (not a dev computer)"
{{- end }}