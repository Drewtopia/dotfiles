{{ if .dev_computer -}}
# Global mise configuration - focused on core development tools
# CLI utilities handled by homebrew/apt for better system integration

[tools]
# JavaScript/TypeScript ecosystem
node = "latest"
pnpm = "latest"
deno = "latest"
bun = "latest"

# Python ecosystem
python = "3.12"
uv = "latest"

# Language runtimes
go = "latest"
rust = "latest"

# CLI utilities for mise functionality
usage = "latest"
fnox = "latest"

[settings]
experimental = true
activate_aggressive = true
idiomatic_version_file_enable_tools = ['node', 'pnpm']

[settings.node]
gpg_verify = false

{{- end }}
