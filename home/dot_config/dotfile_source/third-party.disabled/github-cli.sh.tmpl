# GitHub CLI - add common paths
for gh_path in "/usr/local/bin" "/opt/homebrew/bin" "$HOME/.local/bin"; do
    if [[ -f "$gh_path/gh" ]]; then
        path_add "$gh_path"
        break
    fi
done

# Shell completions for GitHub CLI - only if gh is available
if command -v gh >/dev/null 2>&1; then
    if [[ -n ${ZSH_NAME} ]]; then
        eval "$(gh completion -s zsh)"
    elif [[ -n ${BASH} ]]; then
        # shellcheck disable=SC1090
        source <(gh completion -s bash)
    fi
fi