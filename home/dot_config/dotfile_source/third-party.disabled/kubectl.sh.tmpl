# Kubernetes kubectl - add common paths
for kubectl_path in "/usr/local/bin" "/opt/homebrew/bin" "$HOME/.local/bin"; do
    if [[ -f "$kubectl_path/kubectl" ]]; then
        path_add "$kubectl_path"
        break
    fi
done

# Shell completions for kubectl - only if kubectl is available
if command -v kubectl >/dev/null 2>&1; then
    if [[ -n ${ZSH_NAME} ]]; then
        eval "$(kubectl completion zsh)"
    elif [[ -n ${BASH} ]]; then
        # shellcheck disable=SC1090
        source <(kubectl completion bash)
    fi
fi