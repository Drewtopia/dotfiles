# Docker - containerization platform
# Docker is typically installed system-wide, but add common paths
for docker_path in "/usr/local/bin" "/opt/homebrew/bin" "$HOME/.local/bin"; do
    if [[ -f "$docker_path/docker" ]]; then
        path_add "$docker_path"
        break
    fi
done

# Shell completions for Docker - only if docker is available
if command -v docker >/dev/null 2>&1; then
    if [[ -n ${ZSH_NAME} ]]; then
        eval "$(docker completion zsh)"
    elif [[ -n ${BASH} ]]; then
        # shellcheck disable=SC1090
        source <(docker completion bash)
    fi
fi