# UV - Python package installer
# Add UV paths - check common locations
for uv_path in "$HOME/.cargo/bin" "$HOME/.local/bin" "/opt/homebrew/bin" "/usr/local/bin"; do
    if [[ -f "$uv_path/uv" ]]; then
        path_add "$uv_path"
        break
    fi
done

# Shell completions for uv - only if uv is available
if command -v uv >/dev/null 2>&1; then
    if [[ -n ${ZSH_NAME} ]]; then
        eval "$(uv generate-shell-completion zsh)"
    elif [[ -n ${BASH} ]]; then
        # shellcheck disable=SC1090
        source <(uv generate-shell-completion bash)
    fi
fi