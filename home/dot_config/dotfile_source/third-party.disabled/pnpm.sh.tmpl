# pnpm - direct installation (PATH setup handled in .zshrc)

# Aliases - only if pnpm is available
if command -v pnpm >/dev/null 2>&1; then
    alias pn='pnpm'
fi


# Shell completions for pnpm - only if pnpm is available
if command -v pnpm >/dev/null 2>&1; then
    if [[ -n ${ZSH_NAME} ]]; then
        eval "$(pnpm completion zsh)"
    elif [[ -n ${BASH} ]]; then
        # shellcheck disable=SC1090
        source <(pnpm completion bash)
    fi
fi