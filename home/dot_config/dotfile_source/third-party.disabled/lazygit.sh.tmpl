# lazygit - simple terminal UI for git commands
# Add lazygit paths - check common locations
for lazygit_path in "$HOME/.local/bin" "$HOME/go/bin" "/opt/homebrew/bin" "/usr/local/bin"; do
    if [[ -f "$lazygit_path/lazygit" ]]; then
        path_add "$lazygit_path"
        break
    fi
done

# lazygit does not provide built-in shell completions
# Configuration is managed through ~/.config/lazygit/config.yml