#!/usr/bin/env bash

# Shell Configuration Loader
# Sources all tool configurations generated by installation scripts

SHELL_CONFIG_DIR="$HOME/.config/shell"

# Only proceed if the shell config directory exists
if [[ -d "$SHELL_CONFIG_DIR" ]]; then
    # Source all shell configuration files
    for config_file in "$SHELL_CONFIG_DIR"/*.sh; do
        [[ -f "$config_file" ]] && source "$config_file"
    done
fi