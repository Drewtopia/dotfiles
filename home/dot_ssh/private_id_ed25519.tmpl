{{- /* Only generate SSH key if 1Password is available and authenticated */ -}}
{{- if and (lookPath "op") (.work) -}}
{{-   onepasswordRead "op://Employee/SSH Key/private key?ssh-format=openssh" | replace "\r\n" "\n" -}}
{{- else if and (lookPath "op") (.personal) -}}
{{-   onepasswordRead "op://Private/SSH Key/private key?ssh-format=openssh" | replace "\r\n" "\n" -}}
{{- else -}}
# SSH private key - 1Password not available or not authenticated
# Generate manually with: ssh-keygen -t ed25519 -C "your_email@example.com"
{{- end -}}
